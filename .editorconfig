# EditorConfig helps maintain consistent coding styles
# See https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python (4 spaces)
[*.py]
indent_size = 4

# Makefile (tabs only)
[Makefile]
indent_style = tab

# Special overrides
[*.md]
trim_trailing_whitespace = false
